{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es5",
      "noImplicitAny": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es6"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
      "types": ["node"]
    },
    "include": [
      "src",
      "__tests__/setupEnzyme.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  