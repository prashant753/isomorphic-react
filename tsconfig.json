{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "noImplicitAny": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "modules/": ["src/modules/*"]
    },
  },
  "include": [
    "src",
    "__tests__/setupEnzyme.ts", "__tests__"
  ],
  "exclude": [
    "node_modules"
  ]
}
