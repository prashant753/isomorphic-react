{
    "defaultSeverity": "error",
    "extends": [
        "tslint-clean-code",
        "tslint:recommended",
        "tslint-react"
    ],
    "rulesDirectory": [
        "node_modules/tslint-clean-code/dist/src/"
    ],
    "rules": {
        "no-commented-out-code": true,
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "jsx-no-multiline-js": false
    },
    "jsRules": true
}